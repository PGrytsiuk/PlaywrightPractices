<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Playwright Test Suite" parallel="tests" thread-count="1">
    <test name="Login Test">
        <parameter name="browserType" value="chrome"/> <!-- Change browser type as needed -->
        <classes>
            <class name="com.playwright.tests2.SimpleTest"/>
        </classes>
    </test>

    <!-- Firefox -->
    <test name="Login Test on Firefox">
        <parameter name="browserType" value="firefox"/>
        <classes>
            <class name="com.playwright.tests2.SimpleTest"/>
        </classes>
    </test>

    <!-- Edge -->
    <test name="Login Test on Edge">
        <parameter name="browserType" value="edge"/>
        <classes>
            <class name="com.playwright.tests2.SimpleTest"/>
        </classes>
    </test>

    <!-- Safari -->
    <test name="Login Test on Safari">
        <parameter name="browserType" value="safari"/>
        <classes>
            <class name="com.playwright.tests2.SimpleTest"/>
        </classes>
    </test>
</suite>